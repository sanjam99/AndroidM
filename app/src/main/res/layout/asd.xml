<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/waveImageView"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:contentDescription="Wave Background"
        android:scaleType="fitXY"
        android:src="@drawable/wave" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="110dp"
        android:contentDescription="Welcome Image"
        android:src="@drawable/wel_t1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/waveImageView"
        android:layout_below="@id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="19dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Welcome to our\nDocument Scanner!"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Digitize your paperwork effortlessly\nwith our cutting-edge document\nscanner."
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--            <View-->
            <!--                android:layout_width="8dp"-->
            <!--                android:layout_height="8dp"-->
            <!--                android:layout_margin="4dp"-->
            <!--                android:background="@drawable/dot_active" />-->
            <!--            <View-->
            <!--                android:layout_width="8dp"-->
            <!--                android:layout_height="8dp"-->
            <!--                android:layout_margin="4dp"-->
            <!--                android:background="@drawable/dot_inactive" />-->
            <!--            <View-->
            <!--                android:layout_width="8dp"-->
            <!--                android:layout_height="8dp"-->
            <!--                android:layout_margin="4dp"-->
            <!--                android:background="@drawable/dot_inactive" />-->
            <!--            <View-->
            <!--                android:layout_width="8dp"-->
            <!--                android:layout_height="8dp"-->
            <!--                android:layout_margin="4dp"-->
            <!--                android:background="@drawable/dot_inactive" />-->
        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/white"
            android:gravity="center_horizontal"
            android:text="Next"
            android:textColor="@android:color/holo_purple" />
    </LinearLayout>
</RelativeLayout>